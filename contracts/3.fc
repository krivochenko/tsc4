{- 
  TASK 3 - Find and replace binary substring
  Binary string is represented as a cell linked list: string splitted to chunks,
  first chunk stored to the root cell, next one to the cell in ref and so on;
  each cell can have only one ref. 
  Write the method that find and replaces one flags in the binary string
  with another value. Flags and values can be can be of any length, but
  strictly up to 128 bits. The method must replace every flag it finds.
  Flag and the value to be replaced is guaranteed to be greater than 0.
  Lets give a simple example. We have the target flag 101110101 and the value
  to be written 111111111 as inputs, and a linked list of cells, in which the bit
  value of the first cell ends with ...10100001011, and in the ref we have cell that
  starts with 10101000111111...
  The output should be a linked list where the first
  cell ends with ...10100001111, and the second cell starts with 11111000111111...

-}

() recv_internal() {
}

forall X -> int is_null (X x) asm "ISNULL";

slice int_to_string(int number) {
  builder string = begin_cell();
  tuple chars = null();
  do {
    int r = number~divmod(10);
    chars = cons(r + 48, chars);
  } until (number == 0);
  do {
    int char = chars~list_next();
    string~store_uint(char, 8);
  } until (null?(chars));

  return string.end_cell().begin_parse();
}

int are_slices_equal?(slice a, slice b) asm "SDEQ";

builder replace(slice search, slice replacement, slice source, builder result) {
  if (source.slice_bits() / 8 == 0) {
    if (source.slice_refs() > 0) {
      return replace(search, replacement, source~load_ref().begin_parse(), result);
    } else {
      return result;
    }
  }

  slice chunk = "";
  slice paste = "";
  slice current = source;
  slice next = source.slice_refs() ? source.preload_ref().begin_parse() : null();
  int from_next = 0;

  if (current.slice_bits() >= search.slice_bits()) {
    chunk = current.preload_bits(search.slice_bits());
  } else {
    if (~ is_null(next)) {
      from_next = search.slice_bits() / 8 - current.slice_bits() / 8;
      chunk = begin_cell()
        .store_slice(current)
        .store_slice(next.preload_bits(from_next * 8))
        .end_cell()
        .begin_parse();
    }
  }

  if (are_slices_equal?(chunk, search)) {
    paste = replacement;
    if (from_next) {
      current = next;
      current~load_bits(from_next * 8);
    } else {
      current~load_bits(search.slice_bits());
    }
  } else {
    paste = current~load_bits(8);
  }

  if (paste.slice_bits() <= 1023 - result.builder_bits()) {
    result = result.store_slice(paste);
    return replace(
      search,
      replacement,
      current,
      result
    );
  }
  slice first_part = paste~load_bits((1023 - result.builder_bits()) / 8 * 8);
  result = result.store_slice(first_part);
  return result.store_ref(
    replace(
      search,
      replacement,
      current,
      begin_cell().store_slice(paste)
    ).end_cell()
  );
}

;; testable
cell find_and_replace(int flag, int value, cell linked_list) method_id {
  slice source = linked_list.begin_parse();
  builder result = begin_cell();
  slice search = int_to_string(flag);
  slice replacement = int_to_string(value);

  return replace(search, replacement, source, result).end_cell();
}

